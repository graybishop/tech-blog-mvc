<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
      <div class="col-md-6">
        <h1>Create a New Post:</h1>
        <form class='border p-2 new-post-form'>
            <div class="mb-3">
                <label for="post-name" class="form-label">Post name:</label>
                <input type="text" class="form-control" id="post-name" name="post-name">
            </div>
            <div class="mb-3">
                <label for="post-desc" class="form-label">Post description:</label>
                <textarea class="form-control" id="post-desc" name="post-desc"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <a class="btn btn-sm btn-primary" href="/dashboard/edit/{{post.id}}">Edit</a>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>