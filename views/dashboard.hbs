<div class="row title-row rounded shadow text-light p-4">
  <div class="col">
    <h1>Welcome, {{username}}!</h1>
    <p>In the dashboard, you can create new posts or view, edit, and delete your old ones.</p>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 p-2">
    <div class="border rounded shadow p-2 bg-light">
      <div class="mb-2 title-row rounded text-light p-2">
        <h3>Create a New Post:</h3>
      </div>
      <form class='new-post-form'>
        <div class="mb-3">
          <label for="post-name" class="form-label fw-bold">Post name:</label>
          <input type="text" class="form-control" id="post-name" name="post-name">
        </div>
        <div class="mb-3">
          <label for="post-desc" class="form-label fw-bold">Post description:</label>
          <textarea class="form-control" id="post-desc" name="post-desc"></textarea>
        </div>
        <div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list p-2">
    <div class="border rounded shadow p-2 bg-light">

      <div class="mb-2 title-row rounded text-light p-2">
        <h3>Current Posts:</h3>
      </div>
      <div class="d-flex flex-column">
        {{#each posts as |post|}}
        <div class="d-flex mb-2 px-2 pb-1 border-bottom justify-content-between border-2">
          <div>
            <p class="mb-0 fs-5">{{post.name}}</>
          </div>
          <div class="d-flex gap-1 align-items-center">
            <a class="btn btn-sm btn-primary" href="/post/{{post.id}}">View</a>
            <a class="btn btn-sm btn-primary" href="/dashboard/edit/{{post.id}}">Edit</a>
            <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Delete</button>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>